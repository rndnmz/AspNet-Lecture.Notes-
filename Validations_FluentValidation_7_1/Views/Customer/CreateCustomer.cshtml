@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Validations_FluentValidation_7_1.Models.Customer

@*aşağıdaki kodları ekledikten sonra ekstra birşey yapmamıza gerek kalmıyor. Server tarafında hazırladığımız validasyonlar otomatik olarak tanınmış oluyor. Client tarafı da doğrulama işlemlerini yapacak*@
<script src="~/jquery/jquery.min.js"></script>
<script src="~/jquery-validate/jquery.validate.min.js"></script>
<script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

@*aşağıdaki gibi bir input yanında hataları gösterebileceğimiz gibi, tüm hata mesajlarını toplu halde de gösterebiliriz. *@
<div asp-validation-summary="All" style="background-color:red ; color:white">
</div>


<form asp-action="CreateCustomer" asp-controller="Customer" method="post">

    <div>
        <label asp-for="Id"></label>
        <input type="text" , asp-for="Id" />
        <span asp-validation-for="Id"></span>
    </div>
    <div>
        <label asp-for="Name"></label>
        <input type="text" , asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div>
        <label asp-for="KimlikNo"></label>
        <input type="text" , asp-for="KimlikNo" />
        <span asp-validation-for="KimlikNo"></span>
    </div>
    <div>
        <label asp-for="Email"></label>
        <input type="text" , asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>

    <div>
        <button type="submit">Kaydet</button>
    </div>




</form>