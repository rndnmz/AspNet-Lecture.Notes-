@model List<Category>

<div class="row">
    <div class="col-12">
        <h1> Kategori Sayfası</h1>
        <hr />
        <a href="" class="btn btn-primary btn-sm">Kategori Ekle</a>
        <table class="table table-bordered mt-3">
            <thead>
                <tr>
                    <td>Id</td>
                    <td>Kategori Adı</td>
                    <td>Açıklama </td>
                    <td style="width: 150px"></td>
                </tr>
            </thead>
            <tbody>
                @if(Model.Count>0)
                {
                    @foreach (var c in Model)
                    {
                        <tr>
                            <td>@c.Id</td>
                            <td>@c.CategoryName</td>
                            <td>@c.Description</td>
                            <td>
                                <a href="/category/categoryupdate/@c.Id" class="btn btn-warning btn-sm">Güncelle</a>
                                <form action="/category/deletecategory" method="post">
                                <input type="hidden" name="Id" value="@c.Id" />
                                <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                                </form>

                            </td>
                        </tr>
                    }
                }
                else
                {
                    <div class="alert alert-danger" role="alert">
                        <h3>Listelenecek Kategori Bulunamadı</h3>
                    </div>
                }
                
            </tbody>
        </table>
    </div>










</div>






